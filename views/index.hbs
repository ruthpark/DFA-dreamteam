  </head>
  <body>
    {{>navbar}}
    <div class="row jumbotron">
    <div class="row">
        <div class="container vertical-center">
    <div class= "col-lg-2"></div>
    <div class= "col-lg-8">
        <h1 class="white"> Welcome to <span class="turquoise">{{ title }}</span> </h1>
        <br>
        <h3 class="display-2 feeling"> A tool to help you become more ... </h3>
        <br>
        <h3 class="display-2 feeling"><span class="turquoise">in touch</span> with yourself</h3>
        <h3 class="display-2 feeling"><span class="turquoise">in touch</span> with your loved ones</h3>
        <h3 class="display-2 feeling"><span class="turquoise">in touch</span> with positivity</h3>
        <br>
        <br>

    <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Get Started</button>
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <!-- <h4 class="modal-title">Modal Header</h4> -->
              </div>
              <div class="modal-body">
                <div class="btn-group-vertical">
                  <form name="signup" method="post" action="/signup">
                    <input id="sign-up-name" type="text" placeholder="username" name="username">
                    <input id="sign-up-pwd" type="password" placeholder="password" name="password">
                    <br>
                    <br>
                    <button id="sign-up-2" type="submit" class="btn btn-primary">Sign Up</button>
                  </form>
                  <p class="error-message"></p>

                </div> 
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>

          </div>
        </div>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#signin">Sign In</button>
        <!-- Modal -->
        <div id="signin" class="modal fade" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"></button>
                <!-- <h4 class="modal-title">Modal Header</h4> -->
              </div>
              <div class="modal-body">
                <div class="btn-group-vertical">
                  <form name="signin" method="post" action="/signin">
                    <input id="sign-in-name" type="text" placeholder="username" naodalme="username">
                    <input id="sign-in-pwd" type="password" placeholder="password" name="password">
                    <br>
                    <br>
                    <button id="sign-in-2" type="submit" class="btn btn-primary">Sign In</button>
                  </form>
                  <p class="error-message2"></p>
                  
                </div> 
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>

          </div>
        </div>
    </div>
      
    <div class= "col-lg-2"></div>
    </div>
    </div>
    </div>
    
 
    
